                                <span class="glyphicon glyphicon-user"></span> Bienvenue, {{ app.user.username }} <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('logout') }}">Profil</a></li>
                                        <li><a href="{{ path('logout') }}"><span class="glyphicon glyphicon-heart"></span>                                          Ma WishList</a></li>
                                        <li><a href="{{ path('logout') }}">Se deconnecter</a></li>
                                    </ul>
                                        </li>
                        
                 {% else %}
                        <li class="dropdown">
                             <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-shopping-cart"></span>  <b class="caret"></b></a>
                                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span> Mon compte <b class="caret"></b></a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('login') }}">Se connecter</a></li>
                                    </ul>
                                        </li>
                 {% endif %}
                    </ul>

                    <ul class="nav navbar-nav ">
                        <li>
                            <a href="" class="dropdown-toggle" data-toggle="dropdown">HOMME <b class="caret"></b></a>
                            <ul class="dropdown-menu">    
                                <li><a href="{{ path('articles_hommes') }}">Consulter</a></li>        
                            </ul>
                          </li>
                        
                        <li>
                            <a href="" class="dropdown-toggle" data-toggle="dropdown">FEMME <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('articles_femmes') }}">Consulter</a></li>       
