                              <li><a href="{{ path('articles_enfants') }}">Consulter</a></li>        
                            </ul>
                           
                        </li>
                        <li>
                            <a href="" class="dropdown-toggle" data-toggle="dropdown">TOUS LES ARTICLES <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                              <li><a href="{{ path('articles') }}">Consulter</a></li>        
                            </ul>
                           
                        </li>
                    </ul>
                </div>
            </div><!-- /.container -->
        </nav>
        {% autoescape %}
        <div id="content">{% block content %}{% endblock %}</div>
        {% endautoescape %}
    </div>

    <!-- jQuery -->
    <script src="{{ app.request.basepath }}/lib/jquery/jquery.min.js"></script>
    <!-- JavaScript Boostrap plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>